#!/bin/bash -l
#SBATCH -A uppmax2022-2-5
#SBATCH -M snowy
#SBATCH -p core
#SBATCH -n 4
#SBATCH -t 02:00:00
#SBATCH -J checkm
#SBATCH --mail-type=ALL
#SBATCH --mail-user stavroula.andreakou.9085@student.uu.se

# Load modules
module load bioinfo-tools
module load CheckM

# Set directories
INDIR="/home/andreak/Genome_Analysis/Genome-Analysis/data/Metabat"
OUTDIR="/home/andreak/Genome_Analysis/Genome-Analysis/data/Checkm"


# Set a working directory that we want
cd $OUTDIR 

# Copy the CheckM data
cp -av $CHECKM_DATA/2015_01_16/* .
checkm data setRoot $PWD

# Run the analyses with common workflow 
checkm lineage_wf -t 10 -x fa --reduced_tree $INDIR/D1_metabat/ $OUTDIR/D1-SRR4342129_checkm
checkm lineage_wf -t 10 -x fa --reduced_tree $INDIR/D3_metabat/ $OUTDIR/D3-SRR4342133_checkm

# analyze: identify marker genes in bins --> <marker file> <bin folder> <output folder>
checkm analyze -t 10 -x fa $OUTDIR/D1-SRR4342129_checkm/lineage.ms $INDIR/D1_metabat $OUTDIR/D1-SRR4342129_checkm
checkm analyze -t 10 -x fa $OUTDIR/D3-SRR4342133_checkm/lineage.ms $INDIR/D3_metabat $OUTDIR/D3-SRR4342133_checkm

# qa: assess bins for contamination and completeness
checkm qa -t 10 -o 1 -f $OUTDIR/D1-SRR4342129_checkm/qa.out $OUTDIR/D1-SRR4342129_checkm/lineage.ms $OUTDIR/D1-SRR4342129_checkm
checkm qa -t 10 -o 1 -f $OUTDIR/D3-SRR4342133_checkm/qa.out $OUTDIR/D3-SRR4342133_checkm/lineage.ms $OUTDIR/D3-SRR4342133_checkm
