#!/bin/bash -l
#SBATCH -A uppmax2022-2-5
#SBATCH -M snowy
#SBATCH -p core
#SBATCH -n 2
#SBATCH -t 01:00:00
#SBATCH -J trim_RNA
#SBATCH --mail-type=ALL 
SBATCH --mail-user stavroula.andreakou.9085@student.uu.se 

#script for quality check of trimmed DNA and untrimmed and trimmed RNA.

#load the necessary modules
module load bioinfo-tools 
module load FastQC

SEQDIR="/home/andreak/Genome_Analysis/3_Thrash_2017"
OUTDIR="/home/andreak/Genome_Analysis/"

#Check quality in trimmed DNA
for file in SEQDIR/DNA_trimmed/* do fastqc $file -o OUTDIR/Genome-Analysis/analysis/preprocessing/DNA_fastqc done

#Check quality for untrimmed RNA
for file in SEQDIR/RNA_trimmed/*/home/andreak/Genome_Analysis/3_Thrash_2017/RNA_trimmed/* do fastqc $file -o 
/home/pcr98/GenomeAnalysis/GenomeAnalysis/analysis/preprocessing/RNA_fastqc_raw
done

#Check quality for trimmed RNA
for file in /home/andreak/GenomeAnalysis/GenomeAnalysis/data/raw_data/RNA_trimme$
/home/pcr98/GenomeAnalysis/GenomeAnalysis/analysis/preprocessing/RNA_fastqc_raw
done
